<div class='project' id='project-<%= project.id %>'>
  <div class='col-md-1'>
    <h3>
      <%= link_to project.score.round,
                  project_direct_path(user: project.owner, repo: project.name),
                  class: 'btn btn-info pull-left' %>
    </h3>
  </div>

  <div class='col-md-11'>
    <h3>
      <%= link_to project.name_with_owner, project.github_url %>
      <% if project.main_language.present? %>
      <small><%= project.main_language %></small>
      <% end %>
    </h3>

    <% if project.description.present? || project.homepage.present? %>
      <p>
        <span class='js-emoji'><%= truncate project.description, :length => 200 %></span>
        <%= link_to project.homepage, project.homepage if project.homepage.present? %>
      </p>
    <% end %>
  </div>
</div>
