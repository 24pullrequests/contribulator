<div class='row'>
  <div class='col-md-8'>
    <%= render @projects %>
    <%= will_paginate @projects, renderer: BootstrapPagination::Rails, page_links: false %>
  </div>

  <div class='col-md-4 hidden-sm hidden-xs'>
    <ul>
      <% @languages.each do |language| %>
        <li>
        <% if language == params[:language] %>
          <%= language %>
        <% else %>
          <%= link_to language, root_path(language: language) %>
        <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
