<div class='row'>
  <div class='col-md-8'>
    <h1>
      <%= @user %>'s Projects
    </h1>
    <% if @projects.any? %>
      <%= render @projects %>
    <% else %>
      <p>
        <%= @user %> doesn't have any projects yet, <%= link_to 'add them first', new_project_path %>.
      </p>
    <% end %>
  </div>
</div>
